<h1>Listing orders</h1>

<table>
  <tr>
    <th>Order Id</th>
    <th>Order Time</th>
    <th>Show Me My Sandwich</th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.id %></td>
    <td><%= order.created_at.strftime("%B %d, %Y %I:%M %p") %></td>
    <td><%= link_to 'Show', order %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path, class: "btn btn-primary" %>
