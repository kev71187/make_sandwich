<div class="order">
  <%= form_for(@order) do |f| %>
    <% if @order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <h4>Sandwiches:</h4>
      <% @sandwiches.each do |sandwich| %>
      <div class="pop sandwich input">
        <h5 class="center"><%= sandwich.title %></h5>
        <%= image_tag "#{sandwich.title}.jpg", width: 100, height: 75 %>
        <%= hidden_field :order, :sandwich_id, :disabled => true, :value => sandwich.id  %>
       </div>   
      <% end %>
      <div class="clear"></div>
    </div>
    <h4 class="actions">
      <%= f.submit class: "btn btn-large btn-primary" %>
    </h4>
  <% end %>
</div>
